<html data-ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/png" href="favicon.png" />
    <title>nimbyx</title>
    @Styles.Render("~/Content/css")
    <!-- Custom styles for this template -->
    <link href="/Content/font-styles.css" rel="stylesheet" />
    <link href="/Content/style-v4.css" rel="stylesheet" />
    <link href="/Content/media.css" rel="stylesheet" />
    <link href="/Content/modal.css" rel="stylesheet" />

    <link href="~/Content/shopstyle.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/app/controllers/shopController.js"></script>
    <script src="~/app/services/shopService.js"></script>
    <base href="@System.Configuration.ConfigurationManager.AppSettings["BaseUrlPath"].ToString()" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div class="ng-view container-fluid">
        @RenderBody()
    </div>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/Scripts/ie10-viewport-bug-workaround.js"></script>
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Scripts/jquery-ui-1.10.2.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/menu.js"></script>
    <script src="/Scripts/subscribe.js"></script>

    <script type="text/javascript">
        $(function () {
            $('div.circle[class*=circle_]').on('click', function(){
                var link = $(this).children().find('a');
                window.location = link.attr('href');
                return false;
            });
        });
    </script>

</body>
</html>

