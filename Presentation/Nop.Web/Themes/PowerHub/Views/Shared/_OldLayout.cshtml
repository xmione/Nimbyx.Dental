<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/png" href="~/favicon.png" />

    <title>nimbyx</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/staging/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/staging/font-styles.css" rel="stylesheet" />
    <link href="~/Content/staging/styles.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
        <div class="container-fluid">
            <header class="mainnav">
                <a class="mainnav_br-logo" href="/">
                    @RenderSection("Logo", required: true)
                </a>
                <div class="mainnav_hamburger" tabindex="0" data-toggle="modal" data-target="#nav-modal">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </header>
 
            @RenderSection("TopBanner", required: false)
 
            @*@Html.Partial("_OldStyleContent")*@

            @if (IsSectionDefined("SignUp"))
            {
                @RenderSection("SignUp")
            }
            else
            {
                <div class="row sign-up-top">
                    <div class="col-md-6 signup">
                        <p>Sign up for our newsletter</p>
                        <form id="subscribebottom">
                            <div class="input-group signup-box">
                                <input type="email" class="form-control signup-text" placeholder="Enter your email" name="email" id="email" required>
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" id="btn-subscribebottom">SIGN UP</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            }
            @if (IsSectionDefined("QuickLinks"))
            {
                @RenderSection("QuickLinks")
            }
            else
            {
                <div class="row quick-links">
                    <h4 class="hidden-xs hidden-sm">nimbyx benefits:</h4>
                    <div class="col-sm-6 col-md-5 ui-links">
                        <div class="round-button">
                            <div class="round-button-circle btn-gold">
                                <span class="icon-newspaper-o"></span>
                                <a class="round-button">nimbyx<br>NEWS</a>
                            </div>
                        </div>
                        <span class="ui-caption">Be Better <br>Informed</span>
                    </div>
                    <div class="col-sm-6 col-md-5 ui-links">
                        <div class="round-button">
                            <div class="round-button-circle btn-orange">
                                <span class="icon-credit-card"></span>
                                <a class="round-button">nimbyx<br>PAY</a>
                            </div>
                        </div>
                        <span class="ui-caption">Get Paid <br>Faster</span>
                    </div>
                    <div class="col-sm-6 col-md-5 ui-links">
                        <div class="round-button">
                            <div class="round-button-circle btn-blue">
                                <span class="icon-bar-chart"></span>
                                <a class="round-button">nimbyx<br>LAB</a>
                            </div>
                        </div>
                        <span class="ui-caption">Easy Lab <br>Management</span>
                    </div>
                    <div class="col-sm-6 col-md-5 ui-links">
                        <div class="round-button">
                            <div class="round-button-circle btn-green">
                                <span class="icon-shopping-cart"></span>
                                <a class="round-button">nimbyx<br>SHOP</a>
                            </div>
                        </div>
                        <span class="ui-caption">Connect With <br>Customers</span>
                    </div>
                </div>
            }
            @if (IsSectionDefined("CEORemarks"))
            {
                @RenderSection("CEORemarks")
            }
            else
            {
                <div class="row ceo-remarks">
                    <div class="container ceo-bubble-container">
                        <div class="col-sm-4 col-md-1 ceo-bubble">
                            <p><img src="~/Content/Images/ceo-speech-first.png" style="vertical-align: text-top;">&nbsp;No one should have to rely on yesterday's news to make business decisions today.&nbsp;<img src="~/Content/Images/ceo-speech-last.png" style="vertical-align: text-top;"></p>
                            <h5>Paolo Kalaw - CEO, nimbyx</h5>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="container-fluid ceo-container">
                        <div class="col-xs-12 col-md-6 ceo-content">
                            <h2>Get in the now.<br> Get in the know.</h2>
                            <h3>Become part of nimbyx</h3>
                            <button class="btn btn-default btn-lg" type="button" id="open-form">SIGN UP TODAY</button>
                            <p>* We promise to never share your information with a third party.</p>
                        </div>
                    </div>
                </div>
            }

            <div class="row footer">
                <p class="pull-left footer-p">&copy;2015 All Rights Reserved by nimbyx Ltd.</p>

                <div class="pull-right social-media-icons">
                    <a href="https://www.facebook.com/nimbyx" target="_blank"><img width="25px" src="~/Content/Images/facebook.png"></a>
                    <a href="https://twitter.com/nimbyx" target="_blank"><img width="25px" src="~/Content/Images/twitter.png"></a>
                    <a href="https://www.linkedin.com/company/nimbyx" target="_blank"><img width="25px" src="~/Content/Images/linkedin.png"></a>
                </div>
                <p class="mob-copy">&copy;2015 All Rights Reserved by nimbyx Ltd.</p>
            </div>	
            <div class="modal fade" id="nav-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-nav-content">
                        <div class="modal-nav-body">
                            <ul>
                                <li><a href="index.html">Home</a></li>
                                <li><a href="news/">nimbyx News</a></li>
                                <li><a href="lab/">nimbyx Lab</a></li>
                                <li><a href="shop/">nimbyx Shop</a></li>
                                <li><a href="pay/">nimbyx Pay</a></li>
                                <li><a href="contact-us.html">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Small modal -->
            <div class="modal fade bs-example-modal-lg" id="subscribe" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body">
                            <h4 class="mod-banner">Become part of <span><img src="~/Content/Images/logo-nimbyx-single.png" style="width: 185px !important;"></span></h4>
                            <p>Get informed and connected in dentistry.</p>
                            <div class="list-container">
                                <ul>
                                    <li><input type="checkbox" id="pay"><label for="pay">nimbyx PAY</label></li>
                                    <li><input type="checkbox" id="lab"><label for="lab">nimbyx LAB</label></li>
                                    <li><input type="checkbox" id="news"><label for="news">nimbyx NEWS</label></li>
                                    <li><input type="checkbox" id="shop"><label for="shop">nimbyx SHOP</label></li>
                                </ul>
                            </div>
                            <div class="clearfix"></div>
                            <div class="modal-form">
                                <form id="subscribemodal">
                                    <div class="input-group signup-box">
                                        <input type="email" class="form-control signup-text" placeholder="Enter your email" name="email" id="modalemail" required>
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button" id="btn-subscribemodal">SIGN UP</button>
                                        </span>
                                    </div>
                                </form>
                            </div>
                            <div class="clearfix"></div>
                            <p class="mod-bottom">*We never share your information with a third party.</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade bs-example-modal-lg" id="thankyou" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body">
                            <div class="container modal-thankyou">
                                <div class="row">
                                    <img src="http://www.nimbyx.com/Images/email/logo-nimbyx.png">
                                </div>
                                <div class="row">
                                    <h1>Thank You!</h1>
                                </div>
                                <div class="row">
                                    <h3>You have successfully been added to our subscriber list and will receive any news updates and more.</h3>
                                    <p>In the meantime, please make sure to follow us on</p>
                                </div>
                                <div class="row">
                                    <a href="https://www.facebook.com/nimbyx" target="_blank"><img class="sm" src="http://www.nimbyx.com/Images/email/facebook.png"></a>
                                    <a href="https://twitter.com/nimbyx" target="_blank"><img class="sm" src="http://www.nimbyx.com/Images/email/twitter.png"></a>
                                    <a href="https://www.linkedin.com/company/nimbyx" target="_blank"><img class="sm" src="http://www.nimbyx.com/Images/email/linkedin.png"></a>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
            <script src="~/Scripts/staging/js/jQuery/ie10-viewport-bug-workaround.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
            <script src="~/Scripts/staging/js/bootstrap/bootstrap.min.js"></script>
            <script src="~/Scripts/oldStaging.js"></script>
        </div>
    </body>
